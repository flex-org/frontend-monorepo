{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // 1. Your App's internal imports
      "@/*": ["./src/*"],

      // 2. Monorepo Package Links
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/auth/*": ["../../packages/auth/src/*"],
      "@repo/i18n/*": ["../../packages/i18n/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}